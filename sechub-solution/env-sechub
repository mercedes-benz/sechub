# Start mode of SecHub. 
# Possible values are: localserver, debug
SECHUB_START_MODE="localserver"
ADMIN_USERID="admin"
ADMIN_APITOKEN='myTop$ecret!'

# Enable Java Debugging
JAVA_ENABLE_DEBUG=false

# Keep the container alive after it crashed
KEEP_CONTAINER_ALIVE_AFTER_PDS_CRASHED=false

# File max upload sizes

# The value is in bytes
# -1 - means unlimited
SECHUB_MAX_FILE_UPLOAD_SIZE=-1

# The value is in bytes
# default value 250 MiB
SECHUB_UPLOAD_BINARIES_MAXIMUM_BYTES=262144000

